# Gemini API kulcs - Szerezd be: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_api_key_here

# Adatbázis URL - SQLite alapértelmezett
DATABASE_URL="file:./dev.db"

# Szerver port
PORT=3000

# Környezet: development vagy production
NODE_ENV=development

# Fájlfeltöltési könyvtár
STORAGE_PATH=./uploads

# Frontend URL (csak production esetén, Coolify-ban állítsd be)
FRONTEND_URL=https://your-app-domain.com
