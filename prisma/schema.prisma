generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String
  password  String
  role      String    @default("user")
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id              String     @id @default(uuid())
  name            String
  description     String?
  status          String
  customer_name   String?
  customer_email  String?
  customer_phone  String?
  location        String?
  start_date      String?
  end_date        String?
  created_at      DateTime   @default(now())
  created_by      String
  created_by_id   String
  assigned_users  String     @default("")
  
  tasks           Task[]
  materials       Material[]
  costs           Cost[]
  files           AppFile[]
  
  creator         User       @relation(fields: [created_by_id], references: [id])
}

model Task {
  id          String   @id @default(uuid())
  project_id  String
  title       String
  description String?
  status      String
  start_date  String?
  due_date    String?
  order       Int      @default(0)
  created_by  String
  created_at  DateTime @default(now())
  
  project     Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

model Material {
  id         String  @id @default(uuid())
  project_id String
  name       String
  quantity   Float
  unit       String
  unit_price Float
  supplier   String?
  note       String?
  
  project    Project @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

model Cost {
  id          String  @id @default(uuid())
  project_id  String
  type        String
  description String
  amount      Float
  
  project     Project @relation(fields: [project_id], references: [id], onDelete: Cascade)
}

model AppFile {
  id          String   @id @default(uuid())
  filename    String
  file_path   String
  file_type   String
  uploaded_by String
  project_id  String
  task_id     String?
  created_at  DateTime @default(now())
  
  project     Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
}
